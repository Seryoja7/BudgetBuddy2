<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clipChildren="false">

    <ImageButton
        android:id="@+id/btnOptions"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_more_vert_black"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:contentDescription="Options"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/black" />

    <LinearLayout
        android:id="@+id/categoriesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOptions"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnTransport"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_transport"
                android:background="@drawable/circle_button_light_green"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white"
                android:contentDescription="Transport" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnFood"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_food"
                android:background="@drawable/circle_button_light_green"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white"
                android:contentDescription="Food" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchases"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnPurchases"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_purchases"
                android:background="@drawable/circle_button_light_green"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white"
                android:contentDescription="Purchases" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertainment"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnEntertainment"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_entertainment"
                android:background="@drawable/circle_button_light_green"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white"
                android:contentDescription="Entertainment" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesLayout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eat Outside"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnEatOutside"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_eat_outside"
                android:background="@drawable/circle_button_light_green"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white"
                android:contentDescription="Eat Outside" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnOther"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_other"
                android:background="@drawable/circle_button_light_green"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white"
                android:contentDescription="Other" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOptions"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clipChildren="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnExpense"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_dollar"
                android:background="@drawable/circle_button_yellow"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clipChildren="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/btnIncome"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_dollar"
                android:background="@drawable/circle_button_yellow"
                android:scaleType="centerInside"
                android:padding="20dp"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>